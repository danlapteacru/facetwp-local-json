{
  "name": "danlapteacru/local-json-for-facetwp",
  "description": "Saves FacetWP facets, templates and settings as .json files within your theme.",
  "license": "MIT",
  "type": "wordpress-plugin",
  "keywords": [
    "facetwp",
    "local-json",
    "facetwp-json",
    "plugin",
    "wordpress",
    "wp"
  ],
  "authors": [
    {
      "name": "Dan Lapteacru",
      "email": "danlapteacru@gmail.com",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/danlapteacru/local-json-for-facetwp/",
  "support": {
    "email": "danlapteacru@gmail.com",
    "issues": "https://github.com/danlapteacru/local-json-for-facetwp/issues",
    "source": "https://github.com/danlapteacru/local-json-for-facetwp"
  },
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "itinerisltd/itineris-wp-coding-standards": "^1.0",
    "phpunit/phpunit": "^10.5"
  },
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "DanLapteacru\\FacetWpLocalJson\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1.x-dev"
    }
  },
  "scripts": {
    "style:check": "phpcs",
    "style:fix": "phpcbf"
  }
}
